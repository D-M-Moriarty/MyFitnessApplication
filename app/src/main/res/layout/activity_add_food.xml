<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.darrenmoriarty.myfitnessapp.pageractivities.diet_package.AddFoodActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/foodNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"/>

        <TextView
            android:id="@+id/nutritionFactsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nutrition Facts"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fatTextView"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/carbTextView"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.07"
            android:text="TextView"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/proteinTextView"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/servingSizeTextView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Serving size"/>

        <EditText
            android:id="@+id/qtyEditText"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            tools:text="1"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="57dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/caloriestextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:text="2 cals"/>
    </LinearLayout>

    <TextView
        android:id="@+id/mealSnackTimeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meal &amp; Snack Time"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="180dp"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/anytimeRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ANYTIME"/>

            <RadioButton
                android:id="@+id/breakfastRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BREAKFAST"/>

            <RadioButton
                android:id="@+id/lunchRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LUNCH"/>

            <RadioButton
                android:id="@+id/dinnerRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DINNER"/>
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/morningSnackRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MORNING SNACK"/>

            <RadioButton
                android:id="@+id/afternoonRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AFTERNOON SACK"/>

            <RadioButton
                android:id="@+id/eveningRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EVENING SNACK"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.11"
            android:text="DAY"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/logAddMoreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.68"
            android:text="LOG &amp; ADD MORE"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/logThisButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="log this"/>
    </LinearLayout>
</LinearLayout>
